<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <title>Edit Product â€“ SunnySide Market</title>

  <style>
    body {
      background-color: #FFFBEA;
      font-family: Arial, sans-serif;
    }

    /* NAVBAR */
    nav.navbar {
      background-color: #2E8B57 !important;
    }

    .navbar-brand, .nav-link {
      color: white !important;
      font-weight: bold;
    }

    .nav-link:hover {
      background-color: #FFD54F;
      color: black !important;
      border-radius: 5px;
    }

    /* PAGE HEADER */
    h2 {
      color: #2E8B57;
      font-weight: bold;
      margin-top: 20px;
    }

    /* FORM CARD */
    .edit-card {
      background: white;
      padding: 30px;
      margin-top: 25px;
      border-radius: 15px;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
      max-width: 650px;
      margin-left: auto;
      margin-right: auto;
    }

    label {
      font-weight: bold;
      color: #2E8B57;
      margin-top: 10px;
    }

    .form-control {
      border-radius: 10px;
    }

    /* BUTTONS */
    .btn-success {
      background-color: #2E8B57;
      border: none;
      border-radius: 10px;
      padding: 10px 20px;
    }

    .btn-success:hover {
      background-color: #256f46;
    }

    .btn-secondary {
      border-radius: 10px;
    }

    /* IMAGE PREVIEW */
    .preview-img {
      width: 150px;
      border-radius: 12px;
      margin-top: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }
  </style>
</head>
<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">SunnySide Market</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add Product</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>


  <div class="container">
    <h2 class="text-center">Edit Product</h2>

    <div class="edit-card">

      <% if (product) { %>

      <form action="/updateProduct/<%= product.id %>" method="POST" enctype="multipart/form-data">

        <!-- PRODUCT NAME -->
        <label for="productName">Product Name</label>
        <input 
          type="text" 
          id="productName" 
          name="productName" 
          class="form-control"
          value="<%= product.productName %>" 
          required
        >

        <!-- QUANTITY -->
        <label for="quantity">Quantity</label>
        <input 
          type="number" 
          id="quantity" 
          name="quantity"
          class="form-control"
          min="0" 
          step="1" 
          value="<%= product.quantity %>" 
          required
        >

        <!-- PRICE -->
        <label for="price">Price ($)</label>
        <input 
          type="number" 
          id="price" 
          name="price" 
          class="form-control"
          min="0" 
          step="0.01" 
          value="<%= product.price %>" 
          required
        >

        <!-- CURRENT IMAGE -->
        <label>Current Image</label>
        <input 
          type="text" 
          name="image" 
          class="form-control"
          value="<%= product.image %>" 
          readonly
        >
        <img src="/images/<%= product.image %>" class="preview-img">

        <!-- NEW IMAGE -->
        <label for="image">Upload New Image</label>
        <input 
          type="file" 
          id="image" 
          name="image" 
          accept="image/*"
          class="form-control"
        >

        <!-- BUTTONS -->
        <div class="mt-4 text-center">
          <button type="submit" class="btn btn-success me-2">Update Product</button>
          <a href="/inventory" class="btn btn-secondary">Cancel</a>
        </div>

      </form>

      <% } else { %>
        <p class="text-center">Product not found.</p>
      <% } %>

    </div>
  </div>

</body>
</html>

